
@{
    ViewBag.Title = "Responder";
}
<h2>Informações do inquerito</h2>
<div class="totalresposta">
    <p>Respostas já registadas:<span class="badge"> 1005</span></p>
</div>

<br />
<form class="frm_resposta">
    <div class="col-sm-4">

        <div class="form-group">
            <label for="sel1">Qual é a sua Provincia?</label>
            <select class="form-control" id="sel1">
                <option>Luanda</option>
                <option>Cabinda</option>
                <option>Cuanza Norte</option>
                <option>Cuanza Sul</option>
                <option>Malanje</option>
                <option>Benguela</option>
                <option>Huambo</option>
                <option>Huila</option>
                <option>Moxico</option>
            </select>
        </div>

        <div class="form-group">
            <label for="sel2">Qual é o seu municipio?</label>
            <select class="form-control" id="sel2">
                <option>Luanda</option>
                <option>Belas</option>
                <option>Quissama</option>
                <option>Icole Bengo</option>
                <option>Viana</option>
                <option>Cabinda</option>
                <option>Belize</option>
                <option>Lubango</option>
                <option>Luena</option>
            </select>
        </div>

        <div class="form-group">
            <label for="sel3">Qual é o seu distrito?</label>
            <select class="form-control" id="sel3">
                <option>Samba</option>
                <option>Kilamba Kiaxi</option>
                <option>Imgombotas</option>
                <option>Sambizanga</option>
                <option>Cazenga</option>
            </select>
        </div>

        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-globe"></i></span>
                @Html.TextBox("_value", ViewBag.Comuna as string, new { @class = "form-control", placeholder = "Qual é a sua comuna?" })
            </div>
        </div>

        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user-circle"></i></span>
                @Html.TextBox("_value", ViewBag.Nome as string, new { @class = "form-control", placeholder = "Qual é o seu nome?" })
            </div>
        </div>

        <div class="form-group">
            <label for="sel1">Qual é a sua idade?</label>
            <div class="input-group spinner">
                <input type="text" class="form-control" value="18">
                <div class="input-group-bt-vertical">
                    <button class="btn btn-default" type="button"><i class="fa fa-caret-up"></i></button>
                    <button class="btn btn-default" type="button"><i class="fa fa-caret-down"></i></button>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Genero:</label>
            <label class="radio-inline">
                <input type="radio" name="opradio" checked="checked" /> Masculino
            </label>
            <label class="radio-inline">
                <input type="radio" name="opradio" /> Femenino
            </label>
        </div>

    </div>


    <div class="col-sm-4">
        <div class="form-group">
            <label>Qual é a sua actual ocupação?</label>
            <br />
            <label class="checkbox-inline">
                <input type="checkbox" value="" checked="checked" /> Estudante
            </label>
            <label class="checkbox-inline">
                <input type="checkbox" value="" /> Empregado
            </label>
            <br />
            <label class="checkbox-inline">
                <input type="checkbox" value="" /> Negócio próprio
            </label>
            <label class="checkbox-inline">
                <input type="checkbox" value="" /> Desempregado
            </label>
        </div>

    </div>
    <div class="btn-group">
        <button type="button" class="btn btn-primary"><i class="fa fa-save"></i> Guardar</button>
        <button type="button" class="btn btn-danger"><i class="fa fa-recycle"></i> Cancelar</button>
    </div>
</form>
<div class="bottom">
    <ul class="pagination">
        @for (int i = 1; i <= 10; i++)
        {
            if (i == 1)
            {
        <li class="active"><a href="#">@i</a></li>
            }
            else
            {
        <li><a href="#">@i</a></li>
            }
        }
    </ul>
</div>


