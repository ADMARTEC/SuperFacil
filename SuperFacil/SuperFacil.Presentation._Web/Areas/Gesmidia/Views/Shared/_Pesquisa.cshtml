
@{
    ViewBag.Title = "_Pesquisa";
    Layout = null;
    var controller = (string)ViewBag.Controlador ?? "";
    var action = (string)ViewBag.Accao ?? "";
}

@using (Html.BeginForm(action, controller, FormMethod.Get))
{
    <div class="input-group col-sm-4">
        <div class="input-group-btn">
            @Html.TextBox("_value", ViewBag.currentFilter as string, new { @class = "form-control", placeholder = "Pesquisar" })
            <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
            </button>
        </div>
    </div>
}

