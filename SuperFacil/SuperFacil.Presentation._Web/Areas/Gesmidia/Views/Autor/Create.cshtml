@model SuperFacil.Presentation._Web.Areas.Gesmidia.ViewModels.Autor_ViewModel

@{
    Layout = null;
    ViewBag.Title = "Novo autor";
    ViewBag.Titulo = "Criar um novo autor";
}

<div class="modal-dialog">
    <div class="modal-content">

       @Html.Partial("_HeaderModal")

        @using (Html.BeginForm("Create", "Autor", FormMethod.Post, new { @id = "CreateForm" }))
        {

            @Html.AntiForgeryToken()

            <div class="modal-body">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
            </div>

            @Html.Partial("_FooterModal")
        }
    </div>
</div>

